{
  "version": 2,
  "builds": [
    {
      "src": "main.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    {
      "src": "/predict",
      "methods": ["POST"],
      "dest": "/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "RF_PATH": "AE_RFC.joblib",
    "ENCODER_PATH": "encoder_model.pth",
    "SCALER_PATH": "Scaler.joblib"
  },
  "functions": {
    "main.py": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}
